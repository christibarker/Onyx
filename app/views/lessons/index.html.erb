<div class="header">
	<% if params[:workshop] %>
		<h1>Workshops</h1>
	<% else %>
		<h1>Classes</h1>
	<% end %>
	 	<div class="row">
	 	<div class="col l3 s3"></div>
	 	 <div class="col l6 s9">
	 	 	<div class="card grey darken-4">
	      <div class="card-content white-text">
	      		<% if user_signed_in? %>
	      			<%= link_to "Click here for Class Schedule", instructed_classes_path %>
	      		<% else %>
	      			<%= link_to "Login to start a class", user_session_path %>
	      		<% end %>
	   		</div>
			</div>
		</div>
	</div>
</div>

	<div class="row">
		<div class="col s3 m3"></div>
		<% if logged_in?(:admin) %> 
		  <div class="col s12 m6">
		    <div class="card grey darken-4">
		      <div class="card-content white-text">
		        <span class="card-title center">Create New Class/Workshop</span>
		    		<%= render 'form' %>
		      </div>
		    </div>
		  </div>
	 	<% end %>
	  <div class="col s3 m3"></div>
	</div>

		<div class="row lessons">
			<%# if lessons_path(true) %>
				<%# render @lessons(true) %>
			<%# else %>
				<%= render @lessons %>
	    <%# end %>
	 </div>
