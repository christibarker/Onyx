<div class="form">
  <%= nested_form_for @show, class: "new_show", html: {multipart: true} do |f| %>

      <%# f.label :date %>
      <%= f.date_field :date, placeholder: 'date', class: "form-control", id: "date" %>
      <br>
      <%# f.label :time %>
      <%= f.time_field :time, placeholder: 'time', class: "form-control", id: "time" %>
      <br>
  	<%# f.label :title %>
      <%= f.text_field :title, placeholder: 'title', class: "form-control", id: "title" %>
      <br>
      <%# f.label :description %>
      <%= f.text_field :description, placeholder: 'description', class: "form-control", id: "description" %>
     <br>
      <table>
        <thead>
          <tr>
          <th>Seating Section</th>
          <th>Cost</th>
          <th>Quanity of seats</th>
          </tr>
        </thead>
        <tbody>
          <tr>
         <div class="row">
          <%= f.fields_for :show_seatings do |ss_form| %>
            <td class="line_width input-field"><%= ss_form.collection_select :seat_id, Seat.all, 'id', 'section' %></td>
            <td class="line_width"><%= ss_form.text_field :cost, placeholder: 'cost', class: "form-control", id: "cost" %></td>
            <td class="line_width"><%= ss_form.text_field :quanity, placeholder: 'quanity', class: "form-control", id: "quanity" %></td>
            </td>
          <% end %>
          </tr>
           <td class="line_width"><%= f.link_to_add "Add seat section", :show_seatings, id: 'add-show-seats'%></td>
            </div>
        </tbody>
      </table>

      <%= f.label :avatar, "add image" %>
      <br>
      <%= f.file_field :avatar, class:"button" %>
      <br>
      <br>
       <div class="black-text">
          <%= f.submit %>
      </div>
  <% end %>
</div>	



