<div class="form">
    <%= form_with model: @instructed_class, class: "new_schedule"  do |f| %>
     <br>
        <%= f.label :classes %>
        <div class="input-field">
             <%= f.select :lesson_id, Lesson.all.collect {|l| [l.name, l.id]}, {}, {class: "form-control"} %>
        </div>
        <br>
        <%= f.label :workshops %>
        <div class="input-field">
             <%= f.select :lesson_id, Lesson.all.collect {|l| [l.name, l.id]}, {}, {class: "form-control"} %>
        </div>
        <br>
        <%= f.label :teacher %>
        <div class="input-field">
             <%= f.select :teacher_id, Teacher.all.collect {|t| [t.name, t.id]},{}, {class: "form-control"} %>
        </div>
        <br>
        <%# f.label :time %>
        <%= f.time_field :time, placeholder: 'time', class: "form-control", id: "time" %>
        <br>
          <%# f.label :date %>
        <%= f.date_field :date, placeholder: 'date', class: "form-control", id: "date" %>
        <br>
        <%# f.label :duration %>
        <%= f.text_field :duration, placeholder: 'duration', class: "form-control", id: "duration" %>
         <br>
        <%# f.label :class_size %>
        <%= f.text_field :class_size, placeholder: 'class size', class: "form-control", id: "class_size" %>
        <br>
        <br>
        <br>
        <div class="black-text">
            <%= f.submit "ADD" %>
        </div>
    <% end %>
</div>	

