  
<div class="form">
    <%= form_with model: @user, class: "new_lesson" do |f| %>
    	<%# f.label :name %>
        <%= f.text_field :name, placeholder: 'class name', class: "form-control", id: "name" %>
        <br>
        	<%# f.label :email %>
        <%= f.email_field :email, placeholder: 'class email', class: "form-control", id: "email" %>
        <br>
        	<%# f.label :subject %>
        <%= f.text_field :subject, placeholder: 'class subject', class: "form-control", id: "subject" %>
        <br>
        <%# f.label :message %>
        <%= f.text_field :message, placeholder: 'message', class: "form-control", id: "message" %>
        <%= f.submit "Create Class" %>
    <% end %>
</div>	

